block vars
    - var title = 'Чеширский кот'

block content
    include components/form
    section.sec.thanks
        include components/header
        div.container
            div.sec1__content
                div.sec1__heading
                    div.sec1__heading-container
                        p.sec1__heading-top.thanks__title.
                            <span id="thanksName"></span>
                        p.sec1__heading-bottom.thanks__under-title.
                            наши менеджеры
                        img(src="img/sec1-heading-decor.png", alt="").sec1__heading-decor.sec1__heading-decor_left
                        img(src="img/sec1-heading-decor.png", alt="").sec1__heading-decor.sec1__heading-decor_right
                    p.thanks__subtitle.
                        уже занимаются
                    p.thanks__under-subtitle.
                        вашей заявкой
                    div
                        img(src="img/thanks-decor.png", alt="")
                    p.m.light.thanks__text.
